@using RoomReservations.Models

<h3>ViewReservation</h3>


<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">Reservation Details</MudText>
        <MudText>Reservation ID: @ReservationToDisplay.Id</MudText>
            <MudText>Customer Name: NYI </MudText>
            <MudText>Reservation Date: @ReservationToDisplay.StartDate - @ReservationToDisplay.EndDate</MudText> // TODO: Format this
            @foreach (var rr in ReservationToDisplay.RoomReservations) // ????????
			{
				<MudText>Room Name: @rr.Room.Name</MudText>
			}
        </MudCardContent>
        <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary">Edit NYI</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary">Delete NYI</MudButton>
        </MudCardActions>
    </MudCard>


@code {
    [Parameter]
    public Reservation ReservationToDisplay { get; set; } = new Reservation();
}
